---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <nav>
    <Navigation />

    <div class="controls">
      <ThemeIcon />
      <Hamburger />
    </div>
  </nav>
</header>

<style>
  /* Usamos los tokens de espaciado y color */
  header {
    width: 100%;
    padding: 1rem 0; /* Espaciado vertical */
  }

  nav {
    display: flex;
    justify-content: space-between; /* Empuja los elementos a los extremos */
    align-items: center; /* Centra verticalmente */
    width: 100%;
    max-width: var(--layout-width); /* Mismo ancho que el body (consistencia) */
    margin: 0 auto; /* Centrado horizontal */
  }

  .controls {
    display: flex;
    align-items: center;
    gap: 1rem; /* Token de espacio: separa el icono del sol del men√∫ hamburguesa */
  }
</style>
