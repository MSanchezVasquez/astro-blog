---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header class="site-header">
  <nav>
    <Navigation />

    <div class="controls">
      <ThemeIcon />
      <Hamburger />
    </div>
  </nav>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;

    width: 100%;
    padding: 1rem 0;

    /* EFECTO VIDRIO */
    background-color: rgba(255, 255, 255, 0.8); /* Blanco translúcido */
    backdrop-filter: blur(12px); /* El desenfoque mágico */
    border-bottom: 1px solid rgba(0, 0, 0, 0.05); /* Borde sutil */
  }

  /* Ajuste Dark Mode */
  :global(.dark) .site-header {
    background-color: rgba(13, 9, 80, 0.8);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  nav {
    display: flex;
    justify-content: space-between; /* Empuja los elementos a los extremos */
    align-items: center; /* Centra verticalmente */
    width: 100%;
    max-width: var(--layout-width); /* Mismo ancho que el body (consistencia) */
    margin: 0 auto; /* Centrado horizontal */
  }

  .controls {
    display: flex;
    align-items: center;
    gap: 1rem; /* Token de espacio: separa el icono del sol del menú hamburguesa */
  }
</style>
