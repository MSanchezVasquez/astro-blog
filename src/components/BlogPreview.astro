---
const { post } = Astro.props;
// Formatear fecha a algo legible en español
const formattedDate = post.data.pubDate.toLocaleDateString("es-ES", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="blog-preview">
  <header>
    <div class="meta">
      <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>
      <span class="divider">•</span>
      <span class="difficulty">{post.data.difficulty}</span>
    </div>

    <a href={`/posts/${post.id}/`}>
      <h2>{post.data.title}</h2>
    </a>
  </header>

  <p class="description">{post.data.description}</p>

  <footer>
    <div class="tags">
      {post.data.tags.map((tag) => <span class="tag">#{tag}</span>)}
    </div>
    <a href={`/posts/${post.id}/`} class="read-more">Leer artículo →</a>
  </footer>
</article>

<style>
  .blog-preview {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-gray-400);
  }

  /* El último item no lleva borde */
  .blog-preview:last-of-type {
    border-bottom: none;
  }

  .meta {
    font-size: 0.85rem;
    color: var(--color-gray-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    font-family: var(--font-mono); /* Toque técnico */
  }

  .difficulty {
    color: var(--brand-primary);
    font-weight: bold;
  }

  .divider {
    margin: 0 0.5rem;
  }

  h2 {
    font-size: 1.8rem;
    margin: 0.5rem 0;
    line-height: 1.2;
    transition: color 0.2s ease;
  }

  a {
    text-decoration: none;
    color: var(--text-main);
  }

  a:hover h2 {
    color: var(--brand-primary);
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--text-main);
    opacity: 0.9;
    margin-bottom: 1.5rem;
  }

  footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.8rem;
    background-color: var(--tag-bg);
    color: var(--tag-text);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
  }

  .read-more {
    font-weight: bold;
    color: var(--brand-primary);
    font-size: 0.9rem;
  }

  .read-more:hover {
    text-decoration: underline;
  }
</style>
