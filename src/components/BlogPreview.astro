---
const { post } = Astro.props;
// Formatear fecha a algo legible en español
const formattedDate = post.data.pubDate.toLocaleDateString("es-ES", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="blog-preview">
  <header>
    <a href={`/posts/${post.id}/`}>
      <h2>{post.data.title}</h2>
    </a>

    <div class="meta">
      <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>
      <span class="dot">·</span>
      <span class="difficulty" data-level={post.data.difficulty}
        >{post.data.difficulty}</span
      >
    </div>
  </header>

  <p class="description">{post.data.description}</p>

  <footer>
    <a href={`/posts/${post.id}/`} class="read-link">
      Leer artículo
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><line x1="5" y1="12" x2="19" y2="12"></line><polyline
          points="12 5 19 12 12 19"></polyline></svg
      >
    </a>

    <div class="tags">
      {post.data.tags.slice(0, 3).map((tag) => <span class="tag">#{tag}</span>)}
    </div>
  </footer>
</article>

<style>
  .blog-preview {
    margin-bottom: 4rem; /* Más aire entre artículos */
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  h2 {
    font-size: 2rem; /* Títulos más grandes */
    margin: 0 0 0.5rem 0;
    line-height: 1.1;
    color: var(--text-main);
    transition: color 0.2s;
  }

  a:hover h2 {
    color: var(--brand-primary);
  }

  .meta {
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--color-gray-400);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
  }

  .dot {
    font-weight: bold;
  }

  .difficulty {
    text-transform: uppercase;
    font-size: 0.7rem;
    letter-spacing: 0.05em;
    padding: 2px 6px;
    border-radius: 4px;
    background: var(--color-slate-100);
    color: var(--color-gray-800);
  }

  :global(.dark) .difficulty {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-gray-400);
  }

  .description {
    font-size: 1.1rem;
    margin: 0.5rem 0 1.5rem 0;
    max-width: 65ch; /* Ancho de lectura óptimo */
  }

  footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1rem;
  }

  .read-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: var(--brand-primary);
    text-decoration: none;
    font-family: var(--font-sans);
  }

  /* Animación de flechita al hacer hover */
  .read-link svg {
    transition: transform 0.2s;
  }
  .read-link:hover svg {
    transform: translateX(4px);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--color-gray-400);
    font-family: var(--font-mono);
  }
</style>
