---
const { title, url, description, tags, framework } = Astro.props;

// Diccionario de colores simples según el framework (usando tus tokens si es posible)
const frameworkColors = {
  astro: "var(--color-orange-400)",
  react: "#61dafb",
  js: "#f7df1e",
  default: "var(--brand-primary)",
};

const accentColor = frameworkColors[framework] || frameworkColors.default;
---

<article class="card">
  <a href={url} class="card-link">
    <header>
      <div class="icon-placeholder" style={`background-color: ${accentColor}`}>
      </div>
      <h3>{title}</h3>
    </header>

    <p class="description">{description}</p>

    <div class="tags">
      {tags.slice(0, 3).map((tag) => <span class="tag">#{tag}</span>)}
    </div>
  </a>
</article>

<style>
  .card {
    background-color: var(--bg-card);
    border: 1px solid var(--color-gray-400); /* Borde sutil */
    border-radius: var(--radius-md);
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease,
      border-color 0.2s;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    border-color: var(--brand-primary);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    height: 100%;
    gap: 1rem;
  }

  header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .icon-placeholder {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  h3 {
    margin: 0;
    font-size: 1.25rem;
    line-height: 1.2;
    color: var(--text-main);
  }

  .description {
    font-size: 0.9rem;
    color: var(--color-gray-400);
    /* Limitamos a 2 líneas */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin: 0;
    flex-grow: 1; /* Empuja los tags al fondo */
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    font-family: var(--font-mono);
    color: var(--brand-primary);
    background-color: var(--color-slate-100);
    padding: 2px 6px;
    border-radius: 4px;
  }

  /* Ajuste Dark Mode para tags */
  :global(.dark) .tag {
    background-color: rgba(255, 255, 255, 0.1);
  }
</style>
